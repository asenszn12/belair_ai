{
    "manifest_version": 3,
    "name": "Belair: AI-Driven Productivity Website Blocking Browser Extension",
    "version": "0.5.0",
    "permissions" : [
        "storage", 
        "tabs", 
        "webNavigation"
    ], 

    "host_permissions" : [
        "<all_urls>"
    ], 

    "background" : {
        "service_worker" : "background.js"
    }, 

    "options_page" : "options.html", 

    "action" : {
        "default_title" : "Belair Settings", 
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
